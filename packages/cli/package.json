  "author": "evmscan.org",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/evmscan/explorer"
  },
  "homepage": "https://evmscan.org",
  "bugs": {
    "url": "https://github.com/evmscan/explorer/issues"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.1",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "detect-port": "^1.5.1",
    "dotenv": "^16.3.1",
    "hono": "^4.9.6",
    "open": "^10.0.3",
    "ora": "^8.0.1",
    "prompts": "^2.4.2"
  },
