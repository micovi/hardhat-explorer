{
  "name": "evmscan",
  "version": "1.0.0",
  "description": "Local EVM blockchain explorer - instant setup, zero configuration",
  "bin": {
    "evmscan": "./bin/evmscan.ts"
  },
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "build": "bun run build.ts",
    "build:copy": "bun run build.ts --copy-only",
