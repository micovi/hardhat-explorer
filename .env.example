# ====================================
# NETWORK CONFIGURATION
# ====================================

# Local EVM Node Configuration
VITE_RPC_URL=http://localhost:8545
VITE_WS_URL=ws://localhost:8545
VITE_CHAIN_ID=31337
VITE_CHAIN_NAME=localhost
VITE_APP_NAME=evmscan.org

# ====================================
# PROMOTIONAL CONTENT CONTROLS
# ====================================

# Master switch for all promotional content (sponsors, cloud CTAs)
# Set to 'false' to disable all promotional content globally
VITE_ENABLE_PROMOTIONS=true

# ====================================
# SPONSOR DISPLAY SETTINGS
# ====================================

# Enable/disable sponsor displays
VITE_ENABLE_SPONSORS=false

# Show sponsor banner in footer (scrolling logos)
VITE_SHOW_SPONSOR_BANNER=false

# Show sponsor CTA on homepage
VITE_SHOW_SPONSOR_HOMEPAGE=false

# ====================================
# CLOUD CTA SETTINGS (evmscan.io)
# ====================================

# Enable/disable cloud CTAs
VITE_ENABLE_CLOUD_CTA=false

# Show cloud banner at top of all pages
VITE_SHOW_CLOUD_BANNER=false

# Show cloud CTA on homepage
VITE_SHOW_CLOUD_HOMEPAGE=false

# Show cloud CTA in footer
VITE_SHOW_CLOUD_FOOTER=false

# ====================================
# API ENDPOINTS (Optional)
# ====================================

# API endpoint for fetching dynamic sponsor data
# VITE_SPONSORS_API_URL=https://api.evmscan.io/sponsors